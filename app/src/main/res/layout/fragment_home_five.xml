                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8902.0"
                                android:textColor="@color/text1"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" / "
                                android:textColor="@color/text1"
                                android:textSize="14sp" />

                            <TextView
