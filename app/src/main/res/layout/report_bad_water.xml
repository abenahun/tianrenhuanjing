<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:paddingTop="25dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="日滤液产生量(T)"
            android:textColor="@color/text1"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/water_filtrate_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/shape_edit"
            android:hint="请输入..."
            android:inputType="number|numberDecimal"
            android:maxLength="10"
            android:padding="8dp"
            android:textColorHint="@color/text3"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="库存(T)"
            android:textColor="@color/text1"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/water_repertory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/shape_edit"
            android:hint="请输入"
            android:inputType="number|numberDecimal"
            android:maxLength="10"
            android:padding="8dp"
            android:textColorHint="@color/text3"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="日沼液产生量(T)"
            android:textColor="@color/text1"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/water_gas_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/shape_edit"
            android:hint="请输入"
            android:inputType="number|numberDecimal"
            android:maxLength="10"
            android:padding="8dp"
            android:textColorHint="@color/text3"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="日污水处理量(T)"
            android:textColor="@color/text1"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/water_bad_introduce_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/shape_edit"
            android:hint="请输入"
            android:inputType="number|numberDecimal"
            android:maxLength="10"
            android:padding="8dp"
            android:textColorHint="@color/text3"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="月计划污水处理量(T)"
            android:textColor="@color/text1"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/water_bad_introduce_plan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/shape_edit"
            android:hint="请输入"
            android:inputType="number|numberDecimal"
            android:maxLength="10"
            android:padding="8dp"
            android:textColorHint="@color/text3"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:paddingBottom="25dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="月污水处理量(T)"
            android:textColor="@color/text1"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/water_bad_introduce_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/shape_edit"
            android:hint="请输入"
            android:inputType="number|numberDecimal"
            android:maxLength="10"
            android:padding="8dp"
            android:textColorHint="@color/text3"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>