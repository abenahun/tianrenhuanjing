<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/maincolor">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="首页"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize15" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            app:srcCompat="@mipmap/location" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/imageView2"
            android:text="青岛"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize13" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目1"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize13" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/icon_xia" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/tianren" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="14dp"
                        android:paddingLeft="5dp"
                        android:text="产气量效益"
                        android:textColor="#999"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/shape_circle_red"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="200Nm³/H"
                        android:textColor="#333"
                        android:textSize="14sp"/>
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/backcolor"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="14dp"
                        android:paddingLeft="5dp"
                        android:text="总效益"
                        android:textColor="#999"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/shape_circle_green"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="2000元"
                        android:textColor="#333"
                        android:textSize="14sp"/>
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/backcolor"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="14dp"
                        android:paddingLeft="5dp"
                        android:text="产电效益"
                        android:textColor="#999"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/shape_circle_red"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="良好"
                        android:textColor="#333"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/backcolor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="14dp"
                android:paddingTop="14dp">

                <TextView
                    android:id="@+id/tv_jingji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="12dp"
                    android:drawableTop="@mipmap/jingjixiaoyi"
                    android:gravity="center"
                    android:text="总能耗\n100"
                    android:textColor="@color/textblack"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_nenghao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="12dp"
                    android:drawableTop="@mipmap/nenghaofenxi"
                    android:gravity="center"
                    android:text="水耗\n100"
                    android:textColor="@color/textblack"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_tongji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="12dp"
                    android:drawableTop="@mipmap/shujutongji"
                    android:gravity="center"
                    android:text="电耗\n100"
                    android:textColor="@color/textblack"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/tv_ribao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="12dp"
                    android:drawableTop="@mipmap/gongsiribao"
                    android:gravity="center"
                    android:text="热耗\n100"
                    android:textColor="@color/textblack"
                    android:textSize="@dimen/textsize13" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#ECEBEB" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/maincolor"
                    android:gravity="center_vertical"
                    android:text="数据统计"
                    android:textColor="@color/white"
                    android:paddingLeft="14dp"
                    android:textSize="@dimen/textsize13" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart1"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/backcolor"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart2"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>