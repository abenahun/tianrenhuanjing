<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tianren.methane">

    <!-- 网络 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />//读取外置存储卡

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name="com.tianren.methane.App"
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.tianren.methane.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.LoginActivity"/>
        <activity android:name=".activity.ListActivity"/>
        <activity android:name=".activity.QiGuiActivity"/>
        <activity android:name=".activity.DataEntryActivity"/>
        <activity android:name=".activity.EntryYanYangActivity"/>
        <activity android:name=".activity.EntryProductionCostActivity"/>
        <activity android:name=".activity.EntryProductionBenefitActivity"/>
        <activity android:name=".activity.YanYangActivity"/>
        <activity android:name=".activity.MoveSulfurActivity"></activity>
        <activity android:name=".activity.MoveCarbonActivity"></activity>
        <activity android:name=".activity.PreHandleActivity"></activity>


        <service
            android:name="com.tianren.methane.service.SipService"
            android:exported="true" >
            <intent-filter android:priority="1000" >
                <action android:name="com.tianren.methane.service.SipService" />
            </intent-filter>
        </service>
    </application>

</manifest>